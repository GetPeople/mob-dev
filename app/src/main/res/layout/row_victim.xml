<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_victim"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_korban"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/desc_korban"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/title_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/hint_nama"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            card_view:layout_constraintStart_toEndOf="@+id/imageview_korban"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/value_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            card_view:layout_constraintStart_toEndOf="@+id/imageview_korban"
            card_view:layout_constraintTop_toBottomOf="@id/title_nama"
            tools:text="Richard Habibi" />

        <TextView
            android:id="@+id/title_lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/hint_lokasi"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toEndOf="@+id/imageview_korban"
            card_view:layout_constraintTop_toBottomOf="@id/value_nama" />

        <TextView
            android:id="@+id/value_lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            card_view:layout_constraintStart_toEndOf="@+id/imageview_korban"
            card_view:layout_constraintTop_toBottomOf="@id/title_lokasi"
            tools:text="Cipete Utara" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>